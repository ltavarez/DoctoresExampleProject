@using ViewModels
@model ViewModels.EspecialidadViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="alert alert-danger" role="alert">
    <div class="text-center">
        <h3>Estas seguro que deseas eliminar a la especialidad <strong>@Model.Nombre?</strong> </h3>
    </div>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Borrar" class="btn btn-danger"/> |
                <a class="btn btn-dark text-light" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>


</div>

